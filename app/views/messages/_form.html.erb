  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.number_field :phone %>
  </div><br />
  
  <%= f.hidden_field :user_id, :value => session[:user_id]%>
    
  <div class="actions">
    <%= f.submit %>
